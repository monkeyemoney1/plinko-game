{
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build:production": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "pnpm test:unit run && pnpm test:e2e",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "deploy:docker": "docker-compose -f docker-compose.prod.yml up -d",
    "deploy:build": "pnpm build:production && docker build -t plinko-game:latest .",
    "deploy:full": "pnpm deploy:build && pnpm deploy:docker",
    "db:migrate": "psql $DATABASE_URL -f database/schema.sql",
    "db:backup": "pg_dump $DATABASE_URL > backup_$(date +%Y%m%d_%H%M%S).sql",
    "logs": "docker-compose logs -f plinko-app",
    "start:prod": "NODE_ENV=production node build",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop plinko-game",
    "restart:pm2": "pm2 restart plinko-game",
    "health": "curl -s http://localhost:3000/api/health | jq .",
    "generate-wallet": "node scripts/generate-wallet.js"
  }
}